<div class="row-fluid">
<% @artist.albums.uniq.each do |album| %>

	<% unless album.album_url_slug.blank? %>
		<div class="album span4">
            <span class="imageHover">
                <a href="<%= artist_show_album_path(@artist.url_slug, album.album_url_slug) %>/playlist-create" class="load-playlist  albumLink content-link">
                  <img src="<%= album.art %>" class="img200 playable" />
                </a>
              <a class="hoverPlay" href="#"><span></span></a>

            </span>
          <div>
			<a class="content-link" href="<%= artist_show_album_path(@artist.url_slug, album.album_url_slug) %>"><%= album.al_name %></a>
          </div>
		</div>
	<% end %>
<% end %>
</div>