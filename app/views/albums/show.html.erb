<div id="fb-root"></div>
<div class="backPane"></div>
<div class="leftPane">
	<div><img src="<%= @album.art%>" style="max-width:200px;" /><br>
		<p class="m30l"><%=link_to "Play", album_playlist_create_path(@artist.url_slug, @album.album_url_slug), :class =>"load-playlist  albumLink" %></p>
	</div>

	<div class="social m30l">
		<div><a href="https://twitter.com/share" class="twitter-share-button"  data-text="Check out <%=@album.al_name %> by <%=@artist.twitter_name%>"  data-url="<%=artist_show_album_url(@artist.url_slug,@album.album_url_slug)%>" data-via="3rptr" data-lang="en" data-size="large" data-count="none" data-lang="en" data-related="3rptr">Tweet</a></div>
		<div class="fb-like p5t" data-href="<%=@social_fb_url%>" data-send="false" data-width="350" data-show-faces="true"></div>
	</div>
</div>

<div class="rightPane"><h1><%= @album.al_name %></h1>
	<% unless @album.description.nil? || @album.description.size == 0 %>
		<span class="editable albumDesc p5t" id="text_area" field_name="description" object="album" >
			<%= @album.description.html_safe%>
		</span>
	<% end %>

	<table style="margin-top:15px;">
		<tbody class="row-border">
			<% @album.songs.uniq.each do |songs| %>
				<% unless songs.song_url_slug.blank?%>
				<tr>
					<td><a href="<%= download_url_for(songs.s3_id) %>" data-song-name="<%=songs.song_name%>" data-artist-name="<%=@artist.name%>" class="music-button">
						<span class="p5l">Play</span></a>
					</td>
					<td class="bold"><%= link_to songs.song_name, artist_show_song_path(@artist.url_slug, songs.song_url_slug), :class => "content-link" %> 
					</td>
					<td>song length</td>
					<td><a href="#" class="music-button">BUY</a></td>
				</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>

 		<h2>Want it? Get it!</h2>
		<% if @album.pay_type == "pay" %>
			<%= link_to "Buy Now: Only $"+@album.al_amount.to_s+"!", payment_method_path("album",@artist.url_slug,@album.id ) %>
		<% elsif @album.pay_type == "pwyc" %>
			<!--gets csrf token and passes into hidden field.  Keeps user logged in after form post-->

			<script type="text/javascript">
				$(function(){
					var token = $('meta[name="csrf-token"]').attr('content');
					$("#token").val(token);
				});
			</script>

			<form accept-charset="UTF-8" action="<%=payment_method_path("album",@artist.url_slug,@album.id )%>" class="pwyc_form" enctype="multipart/form-data" data-validate="true"  method="post" novalidate="novalidate"><div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" />


				<input name="authenticity_token" id="token" type="hidden" value=""/></div>


				<label for="amount">download</label>
				<input id="amount" name="amount" type="text" size="3" />
				<input name="commit" type="submit" value="Donate" />

				<!--For order processing-->

				<!--defines the type of object it is-->
				<input id="object" name="object" type="hidden" value="album" />
				<input id="url_slug" name="url_slug" type="hidden" value="<%= @artist.url_slug %>" />
				<input id="song_album_or_event_id" name="song_album_or_event_slug" type="hidden" value="<%=@album.id%>" />
			</form>
		<% else %>
			<h3><%= link_to "Download Free",download_free_path("album",@artist.url_slug,@album.id), :class=>"albumLink" %></h3>
		<% end %>
