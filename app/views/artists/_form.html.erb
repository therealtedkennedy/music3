

           <%= form_for @artist, :html => {:multipart => true}, :html => {:class => 'ajax_update'}, :validate => true do |f| %>
              <% if @artist.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

                  <ul>
                  <% @artist.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="field">
                <%= f.label :name %>
                <%= f.text_field :name, :class=>"span12" %>
              </div>


                <!--<div class="field">-->
                    <!--<%= f.label "Use Image for logo" %>-->
                    <!--<%= f.check_box :logo_toggle %>-->
                <!--</div>-->

              <h3> So you can get paid!</h3>
              <div class="field">
                <%=f.label :pay_pal %>
                <%=f.text_field :pay_pal, :class=>"span12" %>
              </div>


              <h3> Social </h3>
                <div class="field">
                    <%=f.label :twitter_name %>
                    <%=f.text_field :twitter_name, :class=>"span12" %>
                </div>

                <div class="field">
                    <%=f.label :social_title%>
                    <%=f.text_field :social_title, :class=>"span12" %>
                </div>


                <div class="field">
                    <%=f.label "Facebook Page URL"%>
                    <%=f.text_field :fb_page_url,:class=>"span12" %>
                </div>

                <h3>Artist Info</h3>
                <div class="field">
                    <%= f.label :city %>
                    <%= f.text_field :city,:class=>"span12" %>
                </div>
                <div class="field">
                    <%= f.label "Province/state"%>
                    <%= f.text_field :province,:class=>"span12" %>
                </div>
                <div class="field">
                    <%= f.label :country %>
                    <%= f.text_field :country,:class=>"span12" %>
                </div>
              <div class="text-field">
                <%= f.label :influence %>
                <%= f.text_area :influence,:class=>"span12",:rows => "5" %>
              </div>
              <div class="text-field">
                <%= f.label :bio %>
                <%= f.text_area :bio,:class=>"span12",:rows => "5" %>
              </div>
              <div class="field">
                <%= f.label :contact_info %>
                <%= f.text_field :contact_info,:class=>"span12" %>
              </div>
              <div class="field">
                <%= f.label :date_founded %>
                <%= f.date_select :date_founded, start_year: 1900 %>
              </div>

              <div class="actions">
                <%= f.submit :class=>"btn btn-default" %>
              </div>
            <% end %>






