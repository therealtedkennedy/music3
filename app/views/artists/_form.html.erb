    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </div>
  <div class="field">
    <%= f.label :contact_info %><br />
    <%= f.text_area :contact_info %>
  </div>
  <div class="field">
    <%= f.label :date_founded %><br />
    <%= f.date_select :date_founded %>
  </div>
  <div class="field">
    <%= f.label :created_date %><br />
    <%= f.text_field :created_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
