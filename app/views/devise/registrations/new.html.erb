

    <!-- Actual Sign up form. Creates a user-->

    <header>

      <h1>Sign up</h1>

      <div class="row">
        <div class="span8 offset2">
          <p>
             Start promoting your music.
          </p>
        </div>
      </div>

    </header>

    <h2></h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, :class =>'span12', :required=>"required", :placeholder=>"Email" %>

      <%= f.password_field :password, :class =>'span12', :required=>"required", :placeholder=>"Password" %>

      <%= f.password_field :password_confirmation, :class =>'span12', :required=>"required", :placeholder=>"Password Confirmation" %>
      <div><%= f.submit "Sign up", :class=>"btn btn-primary" %></div>
    <% end %>




