<p class="profileCategory">Logo</p>

<li class="field">
  <label class='fl'>Logo image</label>
    <input type="checkbox" name="profile_layout[logo_toggle]" field_name="logo_toggle" object="profile" value="<%=@profile_layout.logo_toggle%>" id="profile_layout_logo_toggle" class="chkbx editable">
</li>

<li class="field">
  <label>Logo upload</label>
  <%= @logo_image_upload.html_safe %>
</li>

<li class="field">
  <label>Logo font</label>
  <div id="<%= :logo_font%>" class="fontSelect" data-font="<%=@profile_layout.logo_font%>">
    <input type="hidden" class="editable" object="profile" name="profile_layout[logo_font]" field_name="logo_font" value="<%=@profile_layout.logo_font%>" id="profile_layout_logo_font">
    <span class="caret"></span>
  </div>
</li>

<li class="field">
  <label>Logo size</label>
  <div class="bfh-selectbox bfh-fontsizes" data-fontsize="<%=@profile_layout.logo_size%>" data-blank="true"></div>
</li>

<li class="field">
  <label>Logo colour</label>
  <input type="color" name="profile_layout[log_color]" id="log_color" class="form-control editable" field_name="log_color" object="profile" value="<%= @profile_layout.log_color %>"/>
</li>


<p class="profileCategory">Background</p>

<li class="field">
    <label class='fl'>Background image</label>
    <input type="checkbox" name="profile_layout[background_toggle]" value="<%=@profile_layout.background_toggle%>" id="profile_layout_background_toggle" class="chkbx editable" field_name="background_toggle" object="profile">
</li>

<li class="field">
  <label>Background upload</label>
  <%= @profile_image_upload.html_safe %>
</li>

<li class="field">
  <label>Background colour</label>
  <input type="color" name="profile_layout[div_1_background_colour]" id="div_1_background_colour" class="form-control editable" field_name="div_1_background_colour" object="profile" value="<%= @profile_layout.div_1_background_colour %>" />
</li>

<p class="profileCategory">Text</p>

<li class="field">
  <label>P size</label>
  <div class="bfh-selectbox bfh-fontsizes" data-fontsize="<%=@profile_layout.p_size%>" data-blank="true"></div>
</li>
<li class="field">
  <label>P colour</label>
  <input type="color" name="profile_layout[p_colour]" id="p_colour" class="form-control editable" field_name="p_colour" object="profile" value="<%= @profile_layout.p_colour %>"/>
</li>

<li class="field">
  <label>Content font</label>
  <div id="<%= :content_font%>" class="fontSelect" data-font="<%=@profile_layout.content_font%>">
    <input type="hidden" class="editable" object="profile" name="profile_layout[content_font]" field_name="content_font" value="<%=@profile_layout.content_font%>" id="profile_layout_content_font">
    <span class="caret"></span>
  </div>
</li>

<p class="profileCategory">Menu</p>

<li class="field">
  <label>div 1 background colour</label>
  <input type="color" name="profile_layout[div_1_background_colour]" field_name="div_1_background_colour" object="profile" id="div_1_background_colour" class="form-control editable" value="<%= @profile_layout.div_1_background_colour %>" />
</li>

<li class="field">
  <label>div 1 transparency</label>
    <input type="range" class="editable form-control" object="profile" name="profile_layout[div_1_transparency]" field_name="div_1_transparency" value="<%=@profile_layout.div_1_transparency%>" id="profile_layout_div_1_transparency" min="0" max="100" onchange="updateSlider(this)" onkeyup="updateSlider(this)"/>

  <div class="range-counter center"><%=@profile_layout.div_1_transparency%></div>
</li>







