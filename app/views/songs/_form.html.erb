<%= form_for @song ,:html => {:class => "ajax_update" }, :validate => true do |f| %>
  <% if @song .errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song .errors.count, "error") %> prohibited this song  from being saved:</h2>

      <ul>
      <% @song .errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :song_name %>
    <%= f.text_field :song_name, :class=>"span12" %>
  </div>

  <div class="field">
    <%= f.label :song_artist %>
    <%= f.text_field :song_artist, :value => @artist.name,:class=>"span12"  %>
  </div>



  <div class="field">
  <%= f.label "Song Writer(s)" %>
  <%= f.text_field :song_written,:class=>"span12" %>
</div>

  <div class="field">
    <%= f.label "Producer(s)" %>
    <%= f.text_field :producer,:class=>"span12" %>
  </div>

  <div class="field">
    <%= f.label "Licence" %>
    <%= f.select :song_licence_type, options_for_select([['All Rights Reserved'], ['Attribution'], ['Non Commercial'], ['No Derivative Works'], ['Share A Like']], :selected => @song.song_licence_type) %>
  </div>

  <div class="field">
     <%= f.label :label %>
     <%= f.text_field :label, :class=>"span12" %>
  </div>


  <div class="field">
    <%= f.label :release_date %>
    <%= f.date_select :release_date, :start_year => 1900   %>
  </div>

  <div class="field">
    <%= f.label :lyrics %>
    <%= f.text_area :lyrics, :escape => false,:class=>"span12",:rows => "5" %>
  </div>

   <div class="actions">
    <%= f.submit :class=>"btn btn-default"%>
  </div>

    <input id="artist_id" name="artist_id" type="hidden" value="<%=@song.s_a_id %>" />
    <input id="form_song_id" name="form_song_id" type="hidden" value="<%= params[:id] %>" />

<% end %>



